export C_INCLUDE_PATH=/scratch/carter/x/xie45/memosa/build-carter/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=/scratch/carter/x/xie45/memosa/build-carter/include:$CPLUS_INCLUDE_PATH
export PATH=/scratch/carter/x/xie45/memosa/build-carter/bin:$PATH

# Need this to recompile MPM in its directory.
export MEMOSA_CONFNAME=carter

pwd
mpirun -np 2 python ./SENT.py lcrack-1mm-2D.cas > SENT.out